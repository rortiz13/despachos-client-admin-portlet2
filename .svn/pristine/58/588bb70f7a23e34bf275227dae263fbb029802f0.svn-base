<?xml version="1.0"?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml" xmlns:ui="http://java.sun.com/jsf/facelets" xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html" xmlns:c="http://java.sun.com/jstl/core" xmlns:aui-cc="http://liferay.com/faces/aui-cc"
	xmlns:p="http://primefaces.org/ui" template="/views/layouts/template.xhtml">

	<ui:define name="body">
		<p:panel header="#{i18n['label-title-Distritos']}">

			<f:metadata>
				<f:event type="preRenderView" listener="#{adminEspecialidaBean.preRenderViewAdd()}" />
			</f:metadata>

			<h:form id="addForm" prependId="false">

				<p:menubar id="Navegacion">
					<p:menuitem value="Agregar" action="add" icon="ui-icon-plusthick"  ajax="false"/>
					<p:menuitem value="Listado" action="distritos" icon="ui-icon-note" ajax="false" />
				</p:menubar>

				<div class="spacer25"></div>

				<p:messages id="messages" autoUpdate="true" closable="true" />

				<div class="spacer25"></div>

				<h:panelGrid id="distritoFields" styleClass="tableStandard" columns="2" columnClasses="column30,column80">

					<p:outputLabel value="#{i18n['label-especialidad-Codigo']}" for="txtCodigo" />
					<p:inputText id="txtCodigo" value="#{adminEspecialidaBean.especialidadSelected.codigo}" />

					<p:outputLabel value="#{i18n['label-especialidad-Nombre']}" for="txtNombre" />
					<p:inputText id="txtNombre" value="#{adminEspecialidaBean.especialidadSelected.nombre}" />

				</h:panelGrid>


				<div class="spacer25"></div>

				<h:panelGrid styleClass="tableStandard" style="text-align: center;">
					<p:commandButton value="#{i18n['button-Guardar']}" action="#{adminEspecialidaBean.addObject()}" icon="ui-icon-disk" ajax="false" />
				</h:panelGrid>

				<p:ajaxStatus onstart="statusDialog.show();" onsuccess="statusDialog.hide();"   />

				<p:dialog modal="true" widgetVar="statusDialog" header="Procesando..." draggable="false" closable="false"> 
					<p:graphicImage value="/images/ajaxloadingbar.gif" />
				</p:dialog>


			</h:form>
		</p:panel>
	</ui:define>
</ui:composition>